<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:descendantFocusability="blocksDescendants">
    <TextView
            android:id="@+id/retriAlpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A"
            android:textSize="18sp"
            android:paddingLeft="15dip"
            android:textColor="@color/black"
            android:background="@color/gray"
            android:visibility="gone"/>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/listview_bg_selector">
        <CheckBox
                android:id="@+id/custom_list_item_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                style="?android:attr/checkboxStyle"/>
        <LinearLayout
                android:id="@+id/msg_phone_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#22000000"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="5dip">
            <ImageView
                    android:id="@+id/custom_item_call_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dip"
                    android:paddingBottom="1dip"
                    android:paddingRight="3dip"
                    android:layout_weight="1"
                    android:src="@drawable/call_icon"/>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/dim_foreground_light_disabled"
                    />
            <ImageView
                    android:id="@+id/custom_item_msg_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dip"
                    android:paddingBottom="1dip"
                    android:layout_weight="1"
                    android:paddingRight="3dip"
                    android:src="@drawable/send_message"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/msg_phone_ll"
                android:layout_toRightOf="@id/custom_list_item_cb"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/custom_item_photo_iv"
                    android:layout_width="44dip"
                    android:layout_height="60dip"
                    android:layout_gravity="center"
                    android:src="@drawable/person_head"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/custom_item_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="吴时伟"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="15sp"/>
                    <TextView
                            android:id="@+id/custom_item_position_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dip"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:text="董事长"/>

                </LinearLayout>
                <TextView
                        android:id="@+id/custom_item_business_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="1dip"
                        android:paddingBottom="1dip"
                        android:paddingRight="1dip"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:text="上海无敌信息管理咨询"/>
                <TextView
                        android:id="@+id/custom_item_company_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="1dip"
                        android:paddingBottom="1dip"
                        android:layout_weight="1"
                        android:paddingRight="1dip"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:text="广告策划有限公司"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>