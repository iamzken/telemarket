<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/my_custom_title_rl"
            android:background="@color/white">
        <TextView
                android:text="@string/my_custom_title"
                android:id="@+id/custom_detail_title_tv"
                style="@style/titleStyle"
                />
        <TextView
                android:id="@+id/custom_back_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dip"
                />
        <TextView
                android:id="@+id/custom_edit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dailyplan_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dip"
                />
    </RelativeLayout>
    <View
            android:id="@+id/mycustom_top_line"
            android:layout_below="@id/my_custom_title_rl"
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@color/orange"/>
    <LinearLayout
            android:id="@+id/top_bar_ll"
            android:layout_below="@id/mycustom_top_line"
            style="@style/barLayoutStyle">
        <TextView
                android:id="@+id/custom_info_tv"
                style="@style/topBar"
                android:text="基本信息"/>
        <TextView
                android:id="@+id/custom_follow_tv"
                style="@style/topBar"
                android:text="跟进情况"/>
        <TextView
                android:id="@+id/local_contact_tv"
                style="@style/topBar"
                android:text="本机"
                android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/custom_detail_bottom_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@color/drawer_top"
            >
        <TextView
                android:id="@+id/send_call_tv"
                android:text="拨打电话"
                style="@style/bottomBar"
                android:drawableLeft="@drawable/call_icon"/>
        <TextView
                android:id="@+id/send_msg_tv"
                android:text="发送短信"
                style="@style/bottomBar"
                android:layout_marginLeft="1px"
                android:drawableLeft="@drawable/send_message"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/custom_detail_viewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/custom_detail_bottom_ll"
            android:layout_below="@id/top_bar_ll"
            android:background="@color/white"
            android:layout_margin="0dip"/>
</RelativeLayout>