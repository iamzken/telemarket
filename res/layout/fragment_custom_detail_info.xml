<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:scrollbars="none"
        >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:background="@drawable/round_text">
        <RelativeLayout
                android:id="@+id/custom_photo_rl"
                android:layout_width="wrap_content"
                android:layout_height="120dip">
            <LinearLayout
                    android:id="@+id/custom_photo_ll"
                    android:layout_height="match_parent"
                    android:layout_width="90dip"
                    android:layout_marginLeft="8dip"
                    android:layout_alignParentRight="true">
                <ImageView
                        android:id="@+id/custom_photo_iv"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent"
                        android:layout_margin="5dip"
                        android:src="@drawable/person_head"
                        android:adjustViewBounds="true"/>
            </LinearLayout>
            <View
                    android:id="@+id/custom_photo_line"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    android:layout_toLeftOf="@id/custom_photo_ll"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_toLeftOf="@id/custom_photo_line">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >
                    <TextView
                            style="@style/remarkStyle"
                            android:text="姓名"/>
                    <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/gray"
                            />
                    <TextView
                            android:id="@+id/custom_name_tv"
                            style="@style/resultStyle"
                            android:text="吴时伟"/>
                </LinearLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/gray"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >
                    <TextView
                            style="@style/remarkStyle"
                            android:text="性别"/>
                    <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/gray"
                            />
                    <TextView
                            android:id="@+id/custom_sex_tv"
                            style="@style/resultStyle"
                            android:text="男"/>
                </LinearLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/gray"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >
                    <TextView
                            style="@style/remarkStyle"
                            android:text="客户编号"/>
                    <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/gray"
                            />
                    <TextView
                            android:id="@+id/custom_num_tv"
                            style="@style/resultStyle"
                            android:text="0001211"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
            <TextView
                    style="@style/remarkStyle"
                    android:text="单位名称"/>
            <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    />
            <TextView
                    android:id="@+id/custom_company_tv"
                    style="@style/resultStyle"
                    android:text="上海无敌管理咨询有限公司"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
            <TextView
                    style="@style/remarkStyle"
                    android:text="职位"/>
            <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    />
            <TextView
                    android:id="@+id/custom_position_tv"
                    style="@style/resultStyle"
                    android:text="董事长"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
            <TextView
                    style="@style/remarkStyle"
                    android:text="手机号"/>
            <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    />
            <TextView
                    android:id="@+id/custom_telephone_tv"
                    style="@style/resultStyle"
                    android:text="10086"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
            <TextView
                    style="@style/remarkStyle"
                    android:text="固定电话"/>
            <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    />
            <TextView
                    android:id="@+id/custom_wirephone_tv"
                    style="@style/resultStyle"
                    android:text="010-56542145"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
            <TextView
                    style="@style/remarkStyle"
                    android:text="助记别称"/>
            <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    />
            <TextView
                    android:id="@+id/custom_easyname_tv"
                    style="@style/resultStyle"
                    android:text="吴总"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
            <TextView
                    style="@style/remarkStyle"
                    android:text="接收短信"/>
            <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    />
            <TextView
                    android:id="@+id/custom_isMsg_tv"
                    style="@style/resultStyle"
                    android:text="是"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
            <TextView
                    style="@style/remarkStyle"
                    android:text="个人偏好"/>
            <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    />
            <TextView
                    android:id="@+id/custom_preference_tv"
                    style="@style/resultStyle"
                    android:text="古董"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
            <TextView
                    style="@style/remarkStyle"
                    android:text="生日"/>
            <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    />
            <TextView
                    android:id="@+id/custom_birthday_tv"
                    style="@style/resultStyle"
                    android:text="1980-12-01"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>